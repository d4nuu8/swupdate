{
  "build": {
    "dockerfile": "../container/Containerfile",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "streetsidesoftware.code-spell-checker",
        "sumneko.lua",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "mesonbuild.mesonbuild"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },

  "forwardPorts": [
    8080
  ]
}
